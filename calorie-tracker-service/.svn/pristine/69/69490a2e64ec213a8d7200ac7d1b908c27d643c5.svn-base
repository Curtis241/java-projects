buildscript {
    repositories {
        mavenCentral()
    }
    dependencies {
        classpath("org.springframework.boot:spring-boot-gradle-plugin:1.3.2.RELEASE")
    }
}
plugins {
    id "org.flywaydb.flyway" version "3.2"
}
apply plugin: 'java'
apply plugin: 'idea'
apply plugin: 'spring-boot'


group 'ca.pragmaticdev.ws'
version '0.1.0'
sourceCompatibility = 1.8
targetCompatibility = 1.8

repositories {
    mavenCentral()
    maven {
        url "https://repository.jboss.org/nexus/content/repositories/thirdparty-releases"
    }
}

jar {
    baseName = 'calorie-tracker'
    version =  '0.1.0'
}

sourceSets {
    main {
        resources {
            srcDirs = ['src/main/resources']
        }
    }
    test {
        resources {
            srcDirs = ['src/test/resources']
        }
    }
}

dependencies {
    compile 'mysql:mysql-connector-java:5.1.38'
    compile 'org.mybatis:mybatis-spring:1.2.3'
    compile 'org.mybatis:mybatis:3.3.0'
    compile 'org.springframework:spring-jdbc:4.2.4.RELEASE'
    compile 'org.apache.tomcat:tomcat-jdbc:8.0.32'
    compile 'org.springframework.security:spring-security-web:4.0.4.RELEASE'
    compile 'org.springframework.security:spring-security-config:4.0.4.RELEASE'
    compile "org.springframework.boot:spring-boot-starter-web"

    
