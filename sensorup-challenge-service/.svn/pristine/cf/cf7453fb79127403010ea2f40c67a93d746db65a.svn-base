CREATE TABLE `sensor` (
  `id` int(11) NOT NULL,
  `sensor_name` varchar(45) DEFAULT NULL,
  `x_position` int(11) DEFAULT NULL,
  `y_position` int(11) DEFAULT NULL,
  `heartrate` int(11) DEFAULT NULL,
  `temperature` int(11) DEFAULT NULL,
  `direction` float DEFAULT NULL,
  `speed` int(11) DEFAULT NULL,
  `active` tinyint(4) DEFAULT '1',
  PRIMARY KEY (`id`),
  UNIQUE KEY `sensor_name_UNIQUE` (`sensor_name`));